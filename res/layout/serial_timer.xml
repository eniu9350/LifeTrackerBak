<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/SerialMain_layout_timer"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView android:id="@+id/SerialTimer_tvTargetName"
		android:text="" android:layout_height="wrap_content"
		android:layout_width="wrap_content"></TextView>
	<Chronometer android:id="@+id/SerialTimer_crMain"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:textStyle="bold" android:textSize="64sp" />
	<Button android:text="Stop" android:id="@+id/SerialTimer_btStop"
		android:layout_width="80dp" android:width="20px"
		android:layout_height="wrap_content"></Button>
</LinearLayout>