<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.hexun.eniu.lifetracker" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="8" />

	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".MainActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".activities.TargetsActivity">
			<intent-filter>
				<action
					android:name="com.hexun.eniu.lifetracker.intent.action.TargetsActivity" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>

		</activity>
		<activity android:name=".activities.NewTargetActivity">
			<intent-filter>
				<action
					android:name="com.hexun.eniu.lifetracker.intent.action.NewTargetActivity" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>

		</activity>

	</application>
</manifest>